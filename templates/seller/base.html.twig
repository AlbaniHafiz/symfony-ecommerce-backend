{% extends 'base.html.twig' %}

{% block title %}{% block page_title %}Espace Vendeur{% endblock %} - Marketplace Étudiant{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Seller Custom CSS -->
    <style>
        :root {
            --seller-primary: #10ac84;
            --seller-secondary: #00d2d3;
            --seller-success: #10ac84;
            --seller-warning: #feca57;
            --seller-danger: #ff6b6b;
            --seller-info: #54a0ff;
            --seller-dark: #2f3542;
            --seller-light: #f1f2f6;
        }

        body {
            background: linear-gradient(135deg, #10ac84 0%, #00d2d3 100%);
            min-height: 100vh;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        .navbar-seller {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--seller-primary) !important;
            font-size: 1.5rem;
        }

        .navbar-nav .nav-link {
            color: var(--seller-dark) !important;
            font-weight: 500;
            padding: 0.75rem 1rem !important;
            border-radius: 8px;
            margin: 0 0.25rem;
            transition: all 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            background: rgba(16, 172, 132, 0.1);
            color: var(--seller-primary) !important;
            transform: translateY(-2px);
        }

        .navbar-nav .nav-link.active {
            background: linear-gradient(135deg, var(--seller-primary), var(--seller-secondary));
            color: white !important;
            box-shadow: 0 4px 15px rgba(16, 172, 132, 0.3);
        }

        .main-content {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px 20px 0 0;
            margin-top: 2rem;
            min-height: calc(100vh - 140px);
            box-shadow: 0 -10px 40px rgba(0, 0, 0, 0.1);
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .card-header {
            background: linear-gradient(135deg, var(--seller-primary), var(--seller-secondary));
            color: white;
            border-radius: 15px 15px 0 0 !important;
            border: none;
            padding: 1.5rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--seller-primary), var(--seller-secondary));
            border: none;
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(16, 172, 132, 0.3);
        }

        .stats-card {
            background: linear-gradient(135deg, var(--seller-light), white);
            border-radius: 15px;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s ease;
        }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .stats-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.5rem;
            background: linear-gradient(135deg, var(--seller-primary), var(--seller-secondary));
            color: white;
        }

        .revenue-card {
            background: linear-gradient(135deg, var(--seller-success), #00d2d3);
            color: white;
            border-radius: 20px;
            padding: 2rem;
        }

        .revenue-card .revenue-number {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .alert {
            border: none;
            border-radius: 12px;
            padding: 1rem 1.5rem;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 2px solid var(--seller-light);
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--seller-primary);
            box-shadow: 0 0 0 0.25rem rgba(16, 172, 132, 0.1);
        }

        .table {
            border-radius: 15px;
            overflow: hidden;
        }

        .table thead th {
            background: var(--seller-light);
            border: none;
            font-weight: 600;
            color: var(--seller-dark);
        }

        .table tbody tr {
            transition: all 0.3s ease;
        }

        .table tbody tr:hover {
            background: rgba(16, 172, 132, 0.05);
            transform: scale(1.02);
        }

        .badge {
            font-weight: 600;
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
        }

        .pagination .page-link {
            border: none;
            border-radius: 8px;
            margin: 0 0.25rem;
            color: var(--seller-primary);
        }

        .pagination .page-link:hover {
            background: var(--seller-primary);
            color: white;
        }

        @media (max-width: 768px) {
            .main-content {
                margin-top: 1rem;
                border-radius: 15px 15px 0 0;
            }
            
            .stats-card {
                margin-bottom: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light navbar-seller fixed-top">
    <div class="container-fluid px-4">
        <a class="navbar-brand" href="{{ path('seller_dashboard') }}">
