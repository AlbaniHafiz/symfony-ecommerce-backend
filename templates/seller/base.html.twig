                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'seller_products' ? 'active' : '' }}" 
                       href="{{ path('seller_products') }}">
                        <i class="bi bi-box-seam me-1"></i>Mes Produits
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'seller_orders' ? 'active' : '' }}" 
                       href="{{ path('seller_orders') }}">
                        <i class="bi bi-cart-check me-1"></i>Commandes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'seller_finances' ? 'active' : '' }}" 
