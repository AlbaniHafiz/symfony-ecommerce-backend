{% extends 'client/base.html.twig' %}

{% block page_title %}Accueil - Marketplace Étudiant{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Bienvenue sur le Marketplace Étudiant
                </h1>
                <p class="lead mb-4">
                    Découvrez et achetez des produits adaptés à votre vie étudiante. 
                    Livraison rapide sur le campus et prix étudiants garantis !
                </p>
                <div class="d-flex gap-3">
                    <a href="#produits" class="btn btn-light btn-lg">
                        <i class="bi bi-grid me-2"></i>Voir les produits
                    </a>
                    <a href="{{ path('client_register') }}" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-person-plus me-2"></i>Rejoindre
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="row">
                    <div class="col-4">
                        <div class="bg-light bg-opacity-20 rounded-3 p-3 mb-3">
                            <h3 class="fw-bold">{{ stats.totalProduits }}</h3>
                            <small>Produits</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="bg-light bg-opacity-20 rounded-3 p-3 mb-3">
                            <h3 class="fw-bold">{{ stats.totalCategories }}</h3>
                            <small>Catégories</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="bg-light bg-opacity-20 rounded-3 p-3 mb-3">
                            <h3 class="fw-bold">{{ stats.totalVendeurs }}</h3>
                            <small>Vendeurs</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <!-- Search and Filters -->
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-6">
                            <input type="text" name="search" class="form-control search-bar" 
                                   placeholder="Rechercher un produit..." 
                                   value="{{ filters.search }}">
                        </div>
                        <div class="col-md-4">
                            <select name="category" class="form-select">
                                <option value="">Toutes les catégories</option>
                                {% for categorie in categories %}
                                    <option value="{{ categorie.id }}" 
                                            {{ filters.category == categorie.id ? 'selected' : '' }}>
                                        {{ categorie.nom }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Products -->
    {% if produitsVedettes %}
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h3 mb-0">
                <i class="bi bi-star-fill text-warning me-2"></i>Produits en vedette
            </h2>
        </div>
        <div class="row">
            {% for produit in produitsVedettes %}
                <div class="col-lg-4 col-md-6 mb-4">
                    {{ include('client/_partials/product_card.html.twig', {'produit': produit}) }}
                </div>
            {% endfor %}
        </div>
    </section>
    {% endif %}

    <!-- Products Grid -->
    <section id="produits" class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h3 mb-0">
                <i class="bi bi-grid me-2"></i>Tous les produits
                <small class="text-muted">({{ totalItems }} résultats)</small>
            </h2>
        </div>

        {% if produits %}
            <div class="row">
                {% for produit in produits %}
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        {{ include('client/_partials/product_card.html.twig', {'produit': produit}) }}
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            {% if totalPages > 1 %}
                <nav aria-label="Navigation des produits">
                    <ul class="pagination justify-content-center">
                        {% if currentPage > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('client_homepage', filters|merge({'page': currentPage - 1})) }}">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        {% endif %}

                        {% for page in 1..totalPages %}
                            {% if page == currentPage %}
                                <li class="page-item active">
                                    <span class="page-link">{{ page }}</span>
                                </li>
                            {% elseif page <= currentPage + 2 and page >= currentPage - 2 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('client_homepage', filters|merge({'page': page})) }}">{{ page }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}

                        {% if currentPage < totalPages %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('client_homepage', filters|merge({'page': currentPage + 1})) }}">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-search display-1 text-muted"></i>
                <h4 class="mt-3">Aucun produit trouvé</h4>
                <p class="text-muted">Essayez de modifier vos critères de recherche</p>
                <a href="{{ path('client_homepage') }}" class="btn btn-primary">
                    <i class="bi bi-arrow-clockwise me-2"></i>Réinitialiser la recherche
                </a>
            </div>
        {% endif %}
    </section>

    <!-- Categories Section -->
    <section id="categories" class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h3 mb-0">
                <i class="bi bi-tags me-2"></i>Catégories populaires
            </h2>
        </div>
        <div class="row">
            {% for categorie in categories %}
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <div class="mb-3">
                                <div style="width: 60px; height: 60px; background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                                    <i class="bi bi-tag text-white fs-4"></i>
                                </div>
                            </div>
                            <h5 class="card-title">{{ categorie.nom }}</h5>
                            <p class="card-text text-muted small">{{ categorie.description }}</p>
                            <a href="{{ path('client_homepage', {'category': categorie.id}) }}" class="btn btn-outline-primary btn-sm">
                                Voir les produits
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- Call to Action -->
    <section class="mb-5">
        <div class="card bg-primary text-white">
            <div class="card-body text-center py-5">
                <h3 class="card-title">Vendez sur notre marketplace</h3>
                <p class="card-text lead">Vous êtes étudiant et souhaitez vendre vos produits ? Rejoignez notre communauté de vendeurs !</p>
                <div class="mt-4">
                    <a href="#" class="btn btn-light btn-lg me-3">
                        <i class="bi bi-shop me-2"></i>Devenir vendeur
                    </a>
                    <a href="#" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-info-circle me-2"></i>En savoir plus
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}