{% extends 'admin/base.html.twig' %}

{% block page_title %}Dashboard{% endblock %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-calendar3"></i> Aujourd'hui
            </button>
        </div>
    </div>
</div>

<!-- Statistiques générales -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Étudiants inscrits
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ nombreUtilisateurs }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-people text-primary" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            CA du mois
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ chiffreAffairesMois|number_format(0, ',', ' ') }} FCFA</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-currency-exchange text-success" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Commandes aujourd'hui
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ commandesAujourdhui }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-cart-check text-info" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Produits actifs
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ nombreProduits }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-box-seam text-warning" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Commandes récentes -->
    <div class="col-lg-8 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-clock-history"></i> Commandes récentes
                </h6>
            </div>
            <div class="card-body">
                {% if commandesRecentes is empty %}
                    <p class="text-muted">Aucune commande récente.</p>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Client</th>
                                    <th>Statut</th>
                                    <th>Total</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for commande in commandesRecentes %}
                                    <tr>
                                        <td>#{{ commande.id }}</td>
                                        <td>{{ commande.utilisateur.nomComplet }}</td>
                                        <td>
                                            <span class="badge bg-{{ commande.statut == 'LIVREE' ? 'success' : (commande.statut == 'ANNULEE' ? 'danger' : 'warning') }}">
                                                {{ commande.statutLibelle }}
                                            </span>
                                        </td>
                                        <td>{{ commande.total|number_format(0, ',', ' ') }} FCFA</td>
                                        <td>{{ commande.dateCreation|date('d/m/Y H:i') }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Statistiques commandes -->
    <div class="col-lg-4 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-bar-chart"></i> Statuts des commandes
                </h6>
            </div>
            <div class="card-body">
                {% if statistiquesCommandes is empty %}
                    <p class="text-muted">Aucune statistique disponible.</p>
                {% else %}
                    {% for stat in statistiquesCommandes %}
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-sm">{{ stat.statut }}</span>
                            <span class="badge bg-secondary">{{ stat.nombre }}</span>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>

        <!-- Alertes rupture de stock -->
        {% if produitsRupture is not empty %}
            <div class="card shadow mt-4">
                <div class="card-header py-3 bg-warning text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="bi bi-exclamation-triangle"></i> Alertes Stock
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-sm mb-2">{{ produitsRupture|length }} produit(s) en rupture :</p>
                    {% for produit in produitsRupture|slice(0, 5) %}
                        <div class="text-sm text-muted">• {{ produit.nom }}</div>
                    {% endfor %}
                    {% if produitsRupture|length > 5 %}
                        <div class="text-sm text-muted">... et {{ produitsRupture|length - 5 }} autre(s)</div>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</div>

<style>
.border-left-primary {
    border-left: 4px solid #007bff !important;
}
.border-left-success {
    border-left: 4px solid #28a745 !important;
}
.border-left-info {
    border-left: 4px solid #17a2b8 !important;
}
.border-left-warning {
    border-left: 4px solid #ffc107 !important;
}
</style>
{% endblock %}