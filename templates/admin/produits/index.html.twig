{% extends 'admin/base.html.twig' %}

{% block page_title %}Gestion des Produits{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 mb-0">
            <i class="bi bi-box-seam me-2"></i>Gestion des Produits
        </h1>
        <p class="text-muted mb-0">Gérez votre catalogue de produits</p>
    </div>
    <a href="{{ path('admin_produits_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Nouveau Produit
    </a>
</div>

<!-- Statistiques -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card">
            <div class="stats-icon" style="background: linear-gradient(135deg, var(--admin-primary), var(--admin-secondary));">
                <i class="bi bi-box-seam"></i>
            </div>
            <h3 class="h4 mb-1">{{ stats.total }}</h3>
            <p class="text-muted mb-0">Total Produits</p>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card">
            <div class="stats-icon" style="background: linear-gradient(135deg, var(--admin-success), #06d6a0);">
                <i class="bi bi-check-circle"></i>
            </div>
            <h3 class="h4 mb-1">{{ stats.actifs }}</h3>
            <p class="text-muted mb-0">Produits Actifs</p>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card">
            <div class="stats-icon" style="background: linear-gradient(135deg, var(--admin-warning), #ffa726);">
                <i class="bi bi-exclamation-triangle"></i>
            </div>
            <h3 class="h4 mb-1">{{ stats.rupture }}</h3>
            <p class="text-muted mb-0">En Rupture</p>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card">
            <div class="stats-icon" style="background: linear-gradient(135deg, var(--admin-info), #26c6da);">
                <i class="bi bi-tags"></i>
            </div>
            <h3 class="h4 mb-1">{{ stats.categories }}</h3>
            <p class="text-muted mb-0">Catégories</p>
        </div>
    </div>
</div>

<!-- Filtres et recherche -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" class="row g-3" id="filterForm">
            <div class="col-md-4">
                <label for="search" class="form-label">Rechercher</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" id="search" name="search" 
                           value="{{ filters.search }}" placeholder="Nom ou description...">
                </div>
            </div>
            <div class="col-md-3">
                <label for="category" class="form-label">Catégorie</label>
                <select class="form-select" id="category" name="category">
                    <option value="">Toutes les catégories</option>
                    {% for categorie in categories %}
                        <option value="{{ categorie.id }}" {{ filters.category == categorie.id ? 'selected' : '' }}>
                            {{ categorie.nom }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="status" class="form-label">Statut</label>
                <select class="form-select" id="status" name="status">
                    <option value="">Tous les statuts</option>
                    <option value="actif" {{ filters.status == 'actif' ? 'selected' : '' }}>Actifs</option>
                    <option value="inactif" {{ filters.status == 'inactif' ? 'selected' : '' }}>Inactifs</option>
                    <option value="rupture" {{ filters.status == 'rupture' ? 'selected' : '' }}>En rupture</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel me-1"></i>Filtrer
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Liste des produits -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-list-ul me-2"></i>Liste des Produits
        </h5>
        <span class="badge bg-secondary">{{ totalItems }} produit(s)</span>
    </div>
    <div class="card-body p-0">
        {% if produits is empty %}
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: var(--admin-light);"></i>
                </div>
                <h5 class="text-muted">Aucun produit trouvé</h5>
                <p class="text-muted">Commencez par ajouter votre premier produit</p>
                <a href="{{ path('admin_produits_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Créer un produit
                </a>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th width="60"><i class="bi bi-image"></i></th>
                            <th>Nom</th>
                            <th>Catégorie</th>
                            <th>Prix</th>
                            <th width="100">Stock</th>
                            <th width="100">Statut</th>
                            <th width="120">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for produit in produits %}
                            <tr>
                                <td>
                                    {% if produit.image %}
                                        <img src="{{ asset('uploads/products/' ~ produit.image) }}" 
                                             alt="{{ produit.nom }}" class="rounded" 
                                             style="width: 40px; height: 40px; object-fit: cover;">
                                    {% else %}
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                             style="width: 40px; height: 40px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>
                                    <div>
                                        <div class="fw-semibold">{{ produit.nom }}</div>
                                        <small class="text-muted">{{ produit.description|slice(0, 50) }}{% if produit.description|length > 50 %}...{% endif %}</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge" style="background: linear-gradient(135deg, var(--admin-info), #26c6da);">
                                        {{ produit.categorie.nom }}
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-semibold">{{ produit.prix|number_format(0, ',', ' ') }} FCFA</span>
                                </td>
                                <td>
                                    {% if produit.stock == 0 %}
                                        <span class="badge bg-danger">
                                            <i class="bi bi-exclamation-triangle me-1"></i>Rupture
                                        </span>
                                    {% elseif produit.stock <= 5 %}
                                        <span class="badge bg-warning">
                                            <i class="bi bi-exclamation-circle me-1"></i>{{ produit.stock }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-success">{{ produit.stock }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input status-toggle" type="checkbox" 
                                               data-product-id="{{ produit.id }}"
                                               {{ produit.actif ? 'checked' : '' }}>
                                        <label class="form-check-label small">
                                            {{ produit.actif ? 'Actif' : 'Inactif' }}
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('admin_produits_show', {id: produit.id}) }}" 
                                           class="btn btn-sm btn-outline-primary" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_produits_edit', {id: produit.id}) }}" 
                                           class="btn btn-sm btn-outline-secondary" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger delete-btn" 
                                                data-product-id="{{ produit.id }}" 
                                                data-product-name="{{ produit.nom }}" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
    
    {% if totalPages > 1 %}
        <div class="card-footer">
            <nav aria-label="Navigation des produits">
                <ul class="pagination justify-content-center mb-0">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('admin_produits_index', filters|merge({page: currentPage - 1})) }}">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    {% endif %}
                    
                    {% for page in range(max(1, currentPage - 2), min(totalPages, currentPage + 2)) %}
                        <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                            <a class="page-link" href="{{ path('admin_produits_index', filters|merge({page: page})) }}">
                                {{ page }}
                            </a>
                        </li>
                    {% endfor %}
                    
                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('admin_produits_index', filters|merge({page: currentPage + 1})) }}">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    {% endif %}
</div>

<!-- Modal de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle text-danger me-2"></i>Confirmer la suppression
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer le produit <strong id="productName"></strong> ?</p>
                <p class="text-muted small">Cette action est irréversible.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="POST" id="deleteForm" class="d-inline">
                    <input type="hidden" name="_token" id="deleteToken">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Toggle de statut
        document.querySelectorAll('.status-toggle').forEach(toggle => {
            toggle.addEventListener('change', async function() {
                const productId = this.dataset.productId;
                const isActive = this.checked;
                
                try {
                    const response = await fetch(`{{ path('admin_produits_toggle_status', {id: '__ID__'}) }}`.replace('__ID__', productId), {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `_token=${getCsrfToken()}`
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        this.checked = result.newStatus;
                        const label = this.nextElementSibling;
                        label.textContent = result.newStatus ? 'Actif' : 'Inactif';
                        
                        // Toast notification
                        showToast(result.message, 'success');
                    } else {
                        this.checked = !isActive;
                        showToast(result.message, 'error');
                    }
                } catch (error) {
                    this.checked = !isActive;
                    showToast('Erreur lors de la mise à jour', 'error');
                }
            });
        });

        // Suppression de produit
        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const productId = this.dataset.productId;
                const productName = this.dataset.productName;
                
                document.getElementById('productName').textContent = productName;
                document.getElementById('deleteForm').action = 
                    `{{ path('admin_produits_delete', {id: '__ID__'}) }}`.replace('__ID__', productId);
                document.getElementById('deleteToken').value = getCsrfToken();
                
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });
        });

        // Recherche en temps réel
        let searchTimeout;
        document.getElementById('search').addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                document.getElementById('filterForm').submit();
            }, 500);
        });

        // Fonctions utilitaires
        function getCsrfToken() {
            // Générer ou récupérer un token CSRF
            return 'csrf_token_placeholder';
        }

        function showToast(message, type) {
            const toastContainer = document.querySelector('.toast-container') || createToastContainer();
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
            toast.setAttribute('role', 'alert');
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            toastContainer.appendChild(toast);
            new bootstrap.Toast(toast).show();
            
            setTimeout(() => toast.remove(), 5000);
        }

        function createToastContainer() {
            const container = document.createElement('div');
            container.className = 'toast-container position-fixed top-0 end-0 p-3';
            container.style.zIndex = '11';
            document.body.appendChild(container);
            return container;
        }
    </script>
{% endblock %}