{% extends 'base.html.twig' %}

{% block title %}Connexion Admin - E-commerce Étudiant{% endblock %}

{% block body %}
<div class="container-fluid vh-100">
    <div class="row h-100">
        <div class="col-md-6 d-flex align-items-center justify-content-center bg-primary text-white">
            <div class="text-center">
                <h1 class="display-4"><i class="bi bi-shop"></i></h1>
                <h2>E-commerce Étudiant</h2>
                <p class="lead">Interface d'Administration</p>
            </div>
        </div>
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="card shadow-lg" style="width: 400px;">
                <div class="card-body p-5">
                    <h3 class="card-title text-center mb-4">Connexion Admin</h3>
                    
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post">
                        {% if app.user %}
                            <div class="alert alert-info">
                                Vous êtes connecté en tant que {{ app.user.nomComplet }}.
                                <a href="{{ path('admin_logout') }}" class="alert-link">Se déconnecter</a>
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" 
                                   class="form-control" autocomplete="email" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">
                                <i class="bi bi-lock"></i> Mot de passe
                            </label>
                            <input type="password" name="_password" id="inputPassword" 
                                   class="form-control" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-box-arrow-in-right"></i> Se connecter
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            <small>Accès réservé aux administrateurs</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}