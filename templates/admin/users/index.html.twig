{% extends 'admin/base.html.twig' %}

{% block page_title %}Gestion des Utilisateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/datatables.net-bs5@1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <style>
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }
        
        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 1.5rem;
            text-align: center;
        }
        
        .stats-card.variant-success {
            background: linear-gradient(135deg, #10ac84 0%, #1dd1a1 100%);
        }
        
        .stats-card.variant-warning {
            background: linear-gradient(135deg, #feca57 0%, #ff9ff3 100%);
        }
        
        .stats-card.variant-info {
            background: linear-gradient(135deg, #54a0ff 0%, #2e86de 100%);
        }
        
        .filters-section {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .role-badge {
            font-size: 0.8rem;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
        }
        
        .status-indicator {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
        }
        
        .status-active {
            background: #10ac84;
        }
        
        .status-inactive {
            background: #ff6b6b;
        }
        
        .bulk-actions {
            background: white;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1rem;
            border: 2px solid #e9ecef;
            display: none;
        }
        
        .bulk-actions.show {
            display: block;
            animation: slideDown 0.3s ease;
        }
        
        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .table tbody tr {
            transition: all 0.3s ease;
        }
        
        .table tbody tr:hover {
            background: rgba(102, 126, 234, 0.05);
            transform: scale(1.01);
        }
        
        .table tbody tr.selected {
            background: rgba(102, 126, 234, 0.1);
        }
        
        .action-buttons .btn {
            margin: 0 0.2rem;
        }
    </style>
{% endblock %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-people me-2"></i>Gestion des Utilisateurs
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('admin_users_create') }}" class="btn btn-success">
                <i class="bi bi-plus-lg me-1"></i>Nouvel Utilisateur
            </a>
            <button type="button" class="btn btn-outline-primary" onclick="exportUsers()">
                <i class="bi bi-download me-1"></i>Exporter
            </button>
            <button type="button" class="btn btn-outline-secondary" onclick="refreshTable()">
                <i class="bi bi-arrow-clockwise me-1"></i>Actualiser
            </button>
        </div>
    </div>
</div>

<!-- Statistiques -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card">
            <i class="bi bi-people" style="font-size: 2rem; margin-bottom: 0.5rem;"></i>
            <h3>{{ stats.total }}</h3>
            <p class="mb-0">Total Utilisateurs</p>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card variant-success">
            <i class="bi bi-check-circle" style="font-size: 2rem; margin-bottom: 0.5rem;"></i>
            <h3>{{ stats.active }}</h3>
            <p class="mb-0">Utilisateurs Actifs</p>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card variant-info">
            <i class="bi bi-person-badge" style="font-size: 2rem; margin-bottom: 0.5rem;"></i>
            <h3>{{ stats.customers }}</h3>
            <p class="mb-0">Clients</p>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stats-card variant-warning">
            <i class="bi bi-shop" style="font-size: 2rem; margin-bottom: 0.5rem;"></i>
            <h3>{{ stats.sellers }}</h3>
            <p class="mb-0">Vendeurs</p>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="filters-section">
    <form method="GET" class="row align-items-end">
        <div class="col-md-4">
            <label for="search" class="form-label">Rechercher</label>
            <input type="text" class="form-control" id="search" name="search" 
                   value="{{ search }}" placeholder="Nom, prénom, email...">
        </div>
        <div class="col-md-2">
            <label for="role" class="form-label">Rôle</label>
            <select class="form-select" id="role" name="role">
                <option value="">Tous les rôles</option>
                <option value="ROLE_ETUDIANT" {{ role == 'ROLE_ETUDIANT' ? 'selected' : '' }}>Client</option>
                <option value="ROLE_SELLER" {{ role == 'ROLE_SELLER' ? 'selected' : '' }}>Vendeur</option>
                <option value="ROLE_ADMIN" {{ role == 'ROLE_ADMIN' ? 'selected' : '' }}>Admin</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="status" class="form-label">Statut</label>
            <select class="form-select" id="status" name="status">
                <option value="">Tous</option>
                <option value="active" {{ status == 'active' ? 'selected' : '' }}>Actif</option>
                <option value="inactive" {{ status == 'inactive' ? 'selected' : '' }}>Inactif</option>
            </select>
        </div>
        <div class="col-md-4">
            <div class="btn-group w-100">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i>Filtrer
                </button>
                <a href="{{ path('admin_users_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg me-1"></i>Reset
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Actions groupées -->
<div class="bulk-actions" id="bulkActions">
    <div class="row align-items-center">
        <div class="col">
            <span id="selectedCount">0</span> utilisateur(s) sélectionné(s)
        </div>
        <div class="col-auto">
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-success" onclick="bulkAction('activate')">
                    <i class="bi bi-check-circle me-1"></i>Activer
                </button>
                <button type="button" class="btn btn-sm btn-warning" onclick="bulkAction('deactivate')">
                    <i class="bi bi-x-circle me-1"></i>Désactiver
                </button>
                <button type="button" class="btn btn-sm btn-danger" onclick="bulkAction('delete')">
                    <i class="bi bi-trash me-1"></i>Supprimer
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Table des utilisateurs -->
<div class="card">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col">
                <h5 class="mb-0">Liste des Utilisateurs</h5>
            </div>
            <div class="col-auto">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="selectAll" onchange="toggleSelectAll()">
                    <label class="form-check-label" for="selectAll">
                        Tout sélectionner
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="usersTable">
                <thead class="table-light">
                    <tr>
                        <th width="50">
                            <input type="checkbox" class="form-check-input" id="selectAllHeader">
                        </th>
                        <th>Utilisateur</th>
                        <th>Contact</th>
                        <th>Rôles</th>
                        <th>Statut</th>
                        <th>Inscription</th>
                        <th width="200">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr data-user-id="{{ user.id }}">
                        <td>
                            <input type="checkbox" class="form-check-input user-checkbox" value="{{ user.id }}">
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="user-avatar me-3">
                                    {{ user.prenom|first|upper }}{{ user.nom|first|upper }}
                                </div>
                                <div>
                                    <strong>{{ user.nomComplet }}</strong>
                                    <br>
                                    <small class="text-muted">#{{ user.id }}</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div>
                                <i class="bi bi-envelope me-1"></i>{{ user.email }}
                            </div>
                            <div>
                                <i class="bi bi-telephone me-1"></i>{{ user.telephone }}
                            </div>
                        </td>
                        <td>
                            {% for role in user.roles %}
                                {% set roleClass = role == 'ROLE_ADMIN' ? 'danger' : (role == 'ROLE_SELLER' ? 'warning' : 'primary') %}
                                {% set roleName = role == 'ROLE_ADMIN' ? 'Admin' : (role == 'ROLE_SELLER' ? 'Vendeur' : 'Client') %}
                                <span class="role-badge badge bg-{{ roleClass }}">{{ roleName }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <span class="status-indicator {{ user.actif ? 'status-active' : 'status-inactive' }}"></span>
                            {{ user.actif ? 'Actif' : 'Inactif' }}
                        </td>
                        <td>
                            {{ user.dateCreation|date('d/m/Y') }}
                            <br>
                            <small class="text-muted">{{ user.dateCreation|date('H:i') }}</small>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a href="{{ path('admin_users_view', {'id': user.id}) }}" 
                                   class="btn btn-sm btn-outline-info" title="Voir">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('admin_users_edit', {'id': user.id}) }}" 
                                   class="btn btn-sm btn-outline-primary" title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-{{ user.actif ? 'warning' : 'success' }}" 
                                        onclick="toggleUserStatus({{ user.id }}, {{ user.actif ? 'false' : 'true' }})"
                                        title="{{ user.actif ? 'Désactiver' : 'Activer' }}">
                                    <i class="bi bi-{{ user.actif ? 'pause' : 'play' }}"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="7" class="text-center p-4">
                            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">Aucun utilisateur trouvé</p>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Pagination -->
{% if totalPages > 1 %}
<nav class="mt-4">
    <ul class="pagination justify-content-center">
        {% if currentPage > 1 %}
        <li class="page-item">
            <a class="page-link" href="?page={{ currentPage - 1 }}&search={{ search }}&role={{ role }}&status={{ status }}">Précédent</a>
        </li>
        {% endif %}
        
        {% for page in 1..totalPages %}
            {% if page == currentPage %}
            <li class="page-item active">
                <span class="page-link">{{ page }}</span>
            </li>
            {% elseif page == 1 or page == totalPages or (page >= currentPage - 2 and page <= currentPage + 2) %}
            <li class="page-item">
                <a class="page-link" href="?page={{ page }}&search={{ search }}&role={{ role }}&status={{ status }}">{{ page }}</a>
            </li>
            {% elseif page == currentPage - 3 or page == currentPage + 3 %}
            <li class="page-item disabled">
                <span class="page-link">...</span>
            </li>
            {% endif %}
        {% endfor %}
        
        {% if currentPage < totalPages %}
        <li class="page-item">
            <a class="page-link" href="?page={{ currentPage + 1 }}&search={{ search }}&role={{ role }}&status={{ status }}">Suivant</a>
        </li>
        {% endif %}
    </ul>
</nav>
{% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        let selectedUsers = new Set();
        
        $(document).ready(function() {
            // Initialize event listeners
            initializeCheckboxes();
        });
        
        function initializeCheckboxes() {
            // Individual checkbox change
            $('.user-checkbox').on('change', function() {
                const userId = $(this).val();
                if (this.checked) {
                    selectedUsers.add(userId);
                    $(this).closest('tr').addClass('selected');
                } else {
                    selectedUsers.delete(userId);
                    $(this).closest('tr').removeClass('selected');
                }
                updateBulkActions();
            });
            
            // Select all checkbox
            $('#selectAll, #selectAllHeader').on('change', toggleSelectAll);
        }
        
        function toggleSelectAll() {
            const isChecked = $('#selectAll').prop('checked') || $('#selectAllHeader').prop('checked');
            
            $('.user-checkbox').prop('checked', isChecked);
            $('#selectAll, #selectAllHeader').prop('checked', isChecked);
            
            selectedUsers.clear();
            
            if (isChecked) {
                $('.user-checkbox').each(function() {
                    selectedUsers.add($(this).val());
                    $(this).closest('tr').addClass('selected');
                });
            } else {
                $('.user-checkbox').closest('tr').removeClass('selected');
            }
            
            updateBulkActions();
        }
        
        function updateBulkActions() {
            const count = selectedUsers.size;
            $('#selectedCount').text(count);
            
            if (count > 0) {
                $('#bulkActions').addClass('show');
            } else {
                $('#bulkActions').removeClass('show');
            }
        }
        
        function toggleUserStatus(userId, newStatus) {
            if (!confirm('Êtes-vous sûr de vouloir modifier le statut de cet utilisateur?')) {
                return;
            }
            
            fetch(`{{ path('admin_users_toggle_status', {'id': '__ID__'}) }}`.replace('__ID__', userId), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert(data.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(data.message, 'error');
                }
            })
            .catch(error => {
                showAlert('Erreur lors de la modification du statut', 'error');
            });
        }
        
        function bulkAction(action) {
            if (selectedUsers.size === 0) {
                showAlert('Aucun utilisateur sélectionné', 'warning');
                return;
            }
            
            const actionText = {
                'activate': 'activer',
                'deactivate': 'désactiver',
                'delete': 'supprimer'
            };
            
            if (!confirm(`Êtes-vous sûr de vouloir ${actionText[action]} ${selectedUsers.size} utilisateur(s)?`)) {
                return;
            }
            
            fetch('{{ path('admin_users_bulk_action') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: new URLSearchParams({
                    'action': action,
                    'user_ids': Array.from(selectedUsers)
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert(data.message, 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(data.message, 'error');
                }
            })
            .catch(error => {
                showAlert('Erreur lors de l\'opération', 'error');
            });
        }
        
        function exportUsers() {
            window.open('{{ path('admin_users_export') }}?format=csv', '_blank');
        }
        
        function refreshTable() {
            location.reload();
        }
        
        function showAlert(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 
                              type === 'error' ? 'alert-danger' : 
                              type === 'warning' ? 'alert-warning' : 'alert-info';
            
            const alert = $(`
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `);
            
            $('.main-content').prepend(alert);
            
            setTimeout(() => {
                alert.fadeOut(() => alert.remove());
            }, 5000);
        }
    </script>
{% endblock %}